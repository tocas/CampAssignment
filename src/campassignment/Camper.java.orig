package campassignment;

/**
 *
 * @author tocas
 */
public class Camper implements Comparable<Camper>{
    private int ID;
    private String name;


    private int gendar;
    private int age;
    private int sectionLeader = -1;

    public int getGendar() {
        return gendar;
    }

    public void setGendar(int gendar) {
        this.gendar = gendar;
    }
    public int getSectionLeader() {
        return sectionLeader;
    }

    public void setSectionLeader(int sectionLeader) {
        this.sectionLeader = sectionLeader;
    }

    public Camper(int ID, String name, int age,int gendar){
        this.ID = ID;
        this.name = name;
        this.age = age;
        this.gendar = gendar;
    }

    public Camper(int ID, String name, int age,int gendar, int sectionLeader){
        this.ID = ID;
        this.name = name;
        this.age = age;
        this.gendar = gendar;
        this.sectionLeader = sectionLeader;
    }

    public int getID() {
        return ID;
    }

    public void setID(int ID) {
        this.ID = ID;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    @Override
    public String toString(){
        if(sectionLeader == -1) return ID+" "+name+" "+age + " " + gendar;
        return ID+" "+name+" "+age + " " + gendar + " is leader of " + sectionLeader + " section";
    }

    public int compareTo(Camper c){
        return this.age - c.getAge();
    }

    public static int getDifference(Camper a, Camper b){
       return Math.abs(a.age - b.age);
    }

    public Camper hadrCopy(){
        return new Camper(this.ID,this.name,this.age,this.gendar,this.sectionLeader);
    }

}
